<Window x:Class="Recording.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recording App" Height="350" Width="525">
    <Grid>
        <Button Name="RecordButton" Content="Record" Width="100" Height="30" Click="RecordButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Button Name="PlayButton" Content="Play" Width="100" Height="30" Click="PlayButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10,0,0"/>
        <DataGrid Name="RecordingsDataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Width="500" Height="200"/>
    </Grid>
</Window>
